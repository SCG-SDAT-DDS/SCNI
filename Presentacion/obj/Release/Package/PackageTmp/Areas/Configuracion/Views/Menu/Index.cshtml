@using Presentacion.Helpers;
@using Sistema;
@model Datos.DTO.Infraestructura.ViewModels.MenuViewModel

@{
    ViewBag.Title = Resources.General.Menu;
}

@section HeaderScripts
{
    <link rel="stylesheet" href="~/scripts/plugins/treeview/themes/default/style.css" />
    <link rel="stylesheet" href="~/Content/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" />
    <link rel="stylesheet" href="~/Content/css/plugins/iCheck/custom.css" />
}

@if (!string.IsNullOrEmpty(Model.NombreTipoGestion))
{
    <div class="tarjeta m-b-15">
        <div class="col-md-12">
            <label class="h4 m-0">
                <span class="h4">@Model.TipoGestion:</span>
                <span class="h3">@Model.NombreTipoGestion</span>
            </label>
        </div>
    </div>
}
<div class="ibox bx-s">
    <div class="ibox-content p-l-10 p-r-10 bg-f">
        <div class="row">
            @using (Html.BeginForm())
            {

                <div class="form-group">
                    <div class="col-md-6 col-xs-12">
                        <div class="col-md-1 col-xs-12"><label for="txtOpcion">@Resources.General.Opcion</label></div>
                        <div class="col-md-11 col-xs-12">
                            <input type="text" name="txtOpcion" id="txtOpcion" class="form-control input-sm m-t-0" />
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-success">
                                <input type="checkbox" id="cbxHabilitados" name="cbxHabilitados" checked="checked" />
                                <label for="cbxHabilitados">@Resources.General.Habilitados</label>
                            </div>
                        </div>
                    </div>
                    @if (Model.TipoGestion == Enumerados.GestionMenu.Usuario)
                    {
                    <div class="col-md-2 col-xs-12">
                        <div id="divActivaMenuPersonalizado" class="col-md-12">
                            <div class="checkbox checkbox-success">
                                @Html.CheckBoxFor(m => m.EsMenuPersonalizado, new { id = "idMenuPersonalizado" })
                                @*@Html.LabelFor(m => m.EsMenuPersonalizado)*@
                                <label><strong>Es menú personalizado</strong></label>
                            </div>
                        </div>
                    </div>
                    
                    @*<div class="col-md-6 pull-right">
                        <div class="col-md-12">
                            <div id="divCopiarMenu" class="col-md-12 p-lateral-0">
                                @*<div class="col-md-12 p-lateral-0">
