@using Datos.Recursos
@using Datos.Repositorios.Catalogos
@using Presentacion.Helpers
@model Datos.Colonia

@{
    ViewBag.Title = General.GuardarColonia;
}
<div class="ibox">
    <div class="ibox-content p-l-20 p-r-10">
        <div class="row center-xs">
            <div class="form-horizontal col-xs-12">
                @using (Html.BeginForm())
            {

                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            @Html.LabelFor(m => m.Nombre)
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "label label-warning" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            <label for="IDEstado">Estado</label>
                        </div>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(m => m.IDEstado, EstadoRepositorio.Buscar(), new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.IDEstado, null, new { @class = "label label-warning" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            <label for="IDMunicipio">Municipio</label>
                        </div>
                        <div class="col-sm-4">
                            @Html.MunicipioDdl(m => m.IDMunicipio, Model.IDEstado, Model.IDMunicipio)
                            @*@Html.Partial("_MunicipioDdl",
                        new MunicipioViewModel(Html.NameFor(m => m.IDMunicipio).ToString(),
                            Html.NameFor(m => m.IDEstado).ToString(),
                            Model.IDEstado, Model.IDMunicipio))*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            <label for="CodigoPostal">Código Postal</label>
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.CodigoPostal, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.CodigoPostal, null, new { @class = "label label-warning" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <div class="pull-right">
                                @Html.ActionLink(General.Regresar, "Index", "Colonia",
                                new { area = "Catalogo" }, new { @class = "btn btn-default" })
                                <input type="submit" value="@General.Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>

                }
            </div>

            </div>
    </div>
</div>

