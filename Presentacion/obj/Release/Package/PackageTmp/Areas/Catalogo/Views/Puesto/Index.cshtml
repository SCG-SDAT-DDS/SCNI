@using Datos.Recursos
@using Presentacion.Helpers
@using Sistema
@model Datos.DTO.Infraestructura.ViewModels.PuestoViewModel

@{
    ViewBag.Title = General.BuscarPuesto;
}

@using (Html.BeginForm())
{
    <div class="ibox bx-s">
        <div class="ibox-content p-l-20 p-r-10 bg-f">
            <div class="row">
                <div class="col-xs-12">
                    @{ Html.EnableClientValidation(false); }

                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3 col-xs-3">
                                @Html.LabelFor(m => m.Puesto.Nombre)
                            </div>
                            <div class="col-md-9 col-xs-9">
                                @Html.TextBoxFor(m => m.Puesto.Nombre, new { @class = "form-control input-sm m-t-0" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-sm btn-primary" value="@Resources.General.Buscar" />
                        @Html.ActionLink(General.Nuevo, "Guardar", new { area = "Catalogo" },
                    new { @class = "btn btn-sm btn-default" })
                    </div>

                </div>
                <div class="col-md-12 form-horizontal">
                    <div class="col-md-6 p-lateral-0">
                        <div class="col-md-3 col-md-offset-3">
                            <div class="checkbox checkbox-success">
                                @Html.CheckBoxFor(m => m.Puesto.Habilitado)
                                @Html.LabelFor(m => m.Puesto.Habilitado)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 m-t-20 p-internos-0 m-b-5">
                    <div class="col-xs-6 bold">
                        @Html.DropDownListFor(m => m.TamanoPagina, Listas.ObtenerListaCantidadPagina())
                        @General.TamanoPagina
                    </div>
                    <div class="col-xs-6 text-right">
                        <label class="label label-success">
                            @General.Encontrados: @Model.TotalEncontrados
                        </label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="tblBusqueda">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Puesto.Nombre)</th>
                                    <th><label for="Puesto_Descripcion">Descripción</label></th>
                                    <th class="text-center">@General.Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var puesto in Model.Puestos)
                                {
                                    <tr>
                                        <td>@puesto.Nombre</td>
                                        <td>@puesto.Descripcion</td>
                                        <td class="text-center">

                                            @if (puesto.Habilitado)
                                            {

                                                @Html.ActionLinkCifrado(General.Modificar, "Guardar", "Puesto", "Catalogo",
                                        "btn btn-warning btn-circle", "fa fa-pencil",
                                        new Dictionary<string, int> { { "idPuesto", puesto.IDPuesto } })

                                                @Html.ActionLinkCifrado(General.Deshabilitar, "Deshabilitar", "Puesto", "Catalogo",
                                        "btn btn-danger btn-circle deshabilitar", "fa fa-times",
                                        new Dictionary<string, int> { { "idPuesto", puesto.IDPuesto } })
                                            }
                                            else
                                            {
                                                @Html.ActionLinkCifrado(General.Habilitar, "Habilitar", "Puesto", "Catalogo",
                                        "btn btn-primary btn-circle habilitar", "fa fa-check",
                                        new Dictionary<string, int> { { "idPuesto", puesto.IDPuesto } })
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div>
                        @Html.Partial("_Paginacion", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_ModalHabilitar");
                        }

@section FooterScripts
{
    <script type="text/javascript" src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.tablesorter.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblBusqueda").tablesorter();

            habilitar.Iniciar('@General.Puesto');
        });
    </script>
}



