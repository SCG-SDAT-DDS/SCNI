@using System.Globalization
@using Datos.Recursos
@using Datos.Repositorios.Catalogos
@using Presentacion.Helpers
@using Sistema
@model Datos.DTO.Infraestructura.ViewModels.MovimientoViewModel

@{
    ViewBag.Title = "Buscar Movimiento";
}

@using (@Html.BeginForm())
{
    <div class="ibox bx-s">
        <div class="ibox-content p-l-20 p-r-10 bg-f">
            <div class="row">
                <div class="col-xs-12">
                    @{ Html.EnableClientValidation(false); }
                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3 col-xs-12">
                                <label for="Movimiento_Nombre">Movimiento</label>:
                            </div>
                            <div class="col-md-9 col-xs-12">
                                @*@Html.TextBoxFor(m => m.Movimiento.Nombre, new { @class = "form-control input-sm" })*@
                                @Html.DropDownListFor(m => m.Movimiento.Nombre, Listas.ObtenerListaMovimientos(), new { @class = "form-control input-sm" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3 col-xs-12">
                                <label for="Movimiento_Usuario_NombreUsuario">Usuario</label>:
                            </div>
                            <div class="col-md-9 col-xs-12">
                                @Html.TextBoxFor(m => m.Movimiento.Usuario.NombreUsuario, new { @class = "form-control input-sm",@maxlength = 30 })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3 col-xs-12">
                                <label for="Movimiento_Fecha">Fecha</label>:
                            </div>
                            <div class="col-md-9 col-xs-12">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.Movimiento.Fecha, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm m-t-0", @maxlength = 10 })
                                    <label for="Movimiento_Fecha" class="input-group-addon btn"><i class="fa fa-calendar"></i></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3 col-xs-12">
                                <label for="Movimiento_Catalogo">Módulo</label>:
                            </div>
                            <div class="col-md-9 col-xs-12">
                                @*@Html.TextBoxFor(m => m.Movimiento.Catalogo, new { @class = "form-control input-sm" })*@
                                @Html.DropDownListFor(m => m.Movimiento.Catalogo, Listas.ObtenerListaCatalogos(), new { @class = "form-control input-sm" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 form-horizontal">
                        <div class="text-right">
                            <input type="submit" class="btn btn-sm btn-primary" value="@General.Buscar" />
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 m-t-20 p-internos-0 m-b-5">
                    <div class="col-xs-12 bold">
                        @Html.DropDownListFor(m => m.TamanoPagina, Listas.ObtenerListaCantidadPagina())
                        @General.TamanoPagina
                    </div>
                    <div class="col-xs-12 text-right">
                        <label class="label label-success">
                            @General.Encontrados: @Model.TotalEncontrados
                        </label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="tblBusqueda">
                            <thead>
                                <tr>
                                    <th>Movimiento</th>
                                    <th>Módulo</th>
                                    <th>Usuario</th>
                                    <th>Fecha</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var movimiento in Model.Movimientos)
                                {
                                    <tr>
                                        <td>@movimiento.Nombre</td>
                                        <td>@movimiento.Catalogo</td>
                                        <td>@movimiento.Usuario.NombreUsuario</td>
                                        <td>@movimiento.Fecha</td>
                                        <td>
                                            @Html.ActionLink(General.Detalles, "detalles", "#", "btn btn-info btn-circle", "fa fa-search")
                                            @Html.HiddenCifrado("hfd_id", movimiento.IDRegistro.ToString())
                                            @Html.Hidden("hfd_modulo", movimiento.Catalogo, new { @id = "hfd_modulo" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div>
                        @Html.Partial("Controls/_Paginacion", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="mdlConfirmar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h3 class="modal-title">
                        <label>@General.Cuidado</label>
                    </h3>
                </div>
                <div class="modal-body text-center">
                    <label id="lblModal"></label>
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" tabindex="2">@General.Cancelar</button>
                    <button id="btnConfirmar" class="btn btn-primary">@General.Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}

@section Modales
{
    @Html.Partial("~/Areas/Catalogo/Views/Shared/Movimiento/_DetalleEntidad.cshtml")
}

@section FooterScripts
{
    <script type="text/javascript" src="/Content/js/jquery.tablesorter.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var enlaceEnEspera;
            var confirmado = false;

            var fechas = [
                $("#Movimiento_Fecha")
            ];
            var opciones = [1, 'dd/mm/yyyy', true];
            iniciarFechas(fechas, opciones);
            $('#Movimiento_Fecha').datepicker('update', new Date());

            $("#tblBusqueda").tablesorter();

            $(".eliminar").click(function (e) {
                if (!confirmado) {
                    enlaceEnEspera = this;
                    e.preventDefault();
                    $("#lblModal").html('@string.Format(Resources.General.PreguntaEliminar, "Movimiento")');
                    $("#mdlConfirmar").modal("show");
                }
            });

            $(".detalles").click(function (e) {
                e.preventDefault();
                var id = $(this).parent().find("input[type=hidden]#hfd_id").val();
                var modulo = $(this).parent().find("input[type=hidden]#hfd_modulo").val();
                detallesMovimiento.Buscar(id, modulo);
            });

            $("#btnConfirmar").click(function (e) {
                e.preventDefault();
                confirmado = true;
                enlaceEnEspera.click();
            });

        });
    </script>
}