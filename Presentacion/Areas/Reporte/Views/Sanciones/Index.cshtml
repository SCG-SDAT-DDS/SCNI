@using Sistema
@model Datos.DTO.Infraestructura.ViewModels.ReporteSancionViewModel
@{
    ViewBag.Title = "Reporte de sanciones";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="ibox bx-s">
        <div class="ibox-content p-l-20 p-r-10 bg-f">
            <div class="row">
                <div class="col-xs-12 p-all-0">
                    @{ Html.EnableClientValidation(false); }

                    <div class="col-md-6">
                        <h3>Inscripción</h3>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    @Html.LabelFor(m => m.FechaInicioInscripcion):
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.FechaInicioInscripcion, "{0:dd/MM/yyyy}", new { @class = "form-control m-t-0", @maxlength = 10 })
                                        <label class="input-group-addon btn" for="FechaInicioInscripcion">
                                            <i class="fa fa-calendar"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    @Html.LabelFor(m => m.FechaFinInscripcion):
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.FechaFinInscripcion, "{0:dd/MM/yyyy}", new { @class = "form-control m-t-0", @maxlength = 10 })
                                        <label class="input-group-addon btn" for="FechaFinInscripcion">
                                            <i class="fa fa-calendar"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h3>Resolución</h3>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    @Html.LabelFor(m => m.FechaInicioResolucion):
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.FechaInicioResolucion, "{0:dd/MM/yyyy}", new { @class = "form-control m-t-0", @maxlength = 10 })
                                        <label class="input-group-addon btn" for="FechaInicioResolucion">
                                            <i class="fa fa-calendar"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    @Html.LabelFor(m => m.FechaFinResolucion):
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.FechaFinResolucion, "{0:dd/MM/yyyy}", new { @class = "form-control m-t-0", @maxlength = 10 })
                                        <label class="input-group-addon btn" for="FechaFinResolucion">
                                            <i class="fa fa-calendar"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h3>Ejecutoria</h3>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    @Html.LabelFor(m => m.FechaInicioEjecutoria):
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.FechaInicioEjecutoria, "{0:dd/MM/yyyy}", new { @class = "form-control m-t-0", @maxlength = 10 })
                                        <label class="input-group-addon btn" for="FechaInicioEjecutoria">
                                            <i class="fa fa-calendar"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    @Html.LabelFor(m => m.FechaFinEjecutoria):
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.FechaFinEjecutoria, "{0:dd/MM/yyyy}", new { @class = "form-control m-t-0", @maxlength = 10 })
                                        <label class="input-group-addon btn" for="FechaFinEjecutoria">
                                            <i class="fa fa-calendar"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12"><hr /></div>

                    <div class="col-md-6">
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    <label for="Sancion_TipoSancion">Tipo de Sanción:</label>
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    @Html.DropDownListFor(m => m.TipoSancion, Listas.ObtenerListaSancionesFederal(), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    <label for="Sancion_TipoSancion">Sanción:</label>
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    @Html.DropDownListFor(m => m.ConSinObservaciones, Listas.ObtenerListaConSinObservacion(), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 col-xs-12">
                                    <label for="Campo">Origen:</label>
                                </div>
                                <div class="col-md-9 col-xs-12">
                                    @Html.DropDownListFor(m => m.Origen, Listas.ObtenerListaTipoSancionEstatal(), new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3 p-t-5"><label for="Solicitud_Tipo">Tipo de Entidad:</label></div>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.TipoEntidad, Listas.ObtenerListaTipoEntidad(), new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-xs-12 m-t-10">
                        <div class="pull-right">
                            <input type="submit" name="enviar" class="btn btn-sm btn-primary" value="Generar" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
                        }

@section FooterScripts
{
    <script type="text/javascript">
        window.MostrarDivCargando = false;

        $(document).ready(function() {
            $("#FechaInicioResolucion, #FechaFinResolucion,#FechaInicioEjecutoria, #FechaFinEjecutoria,#FechaInicioInscripcion, #FechaFinInscripcion").datepicker({
                language: "es",

                keyboardNavigation: true,
                forceParse: false,
                calendarWeeks: true,

                viewMode: 1,
                daysOfWeekHighlighted: "1,2,3,4,5",
                today: "linked",
                format: 'dd/mm/yyyy', autoclose: true
            }).on('changeDate', function (ev) {
                (ev.viewMode == 'days') ? $(this).datepicker('hide') : '';
            });
        });
    </script>
}
