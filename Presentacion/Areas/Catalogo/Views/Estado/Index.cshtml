@using Datos.Recursos
@using Datos.Repositorios.Catalogos
@using Presentacion.Helpers
@using Sistema
@model Datos.DTO.Infraestructura.ViewModels.EstadoViewModel

@{
    ViewBag.Title = "Buscar Estado";
}

@using (@Html.BeginForm())
{
    <div class="tarjeta bg-f bx-s">
        <div class="col-md-12">
            @{ Html.EnableClientValidation(false); }
            <div class="col-md-6 form-horizontal">
                <div class="form-group">
                    <div class="col-md-3 col-xs-3">
                        @Html.LabelFor(m => m.Estado.Nombre)
                    </div>
                    <div class="col-md-9 col-xs-9">
                        @Html.TextBoxFor(m => m.Estado.Nombre, new { @class = "form-control input-sm" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="pull-left">
                    <input type="submit" class="btn btn-sm btn-primary" value="@General.Buscar" />
                    @Html.ActionLink(General.Nuevo, "Guardar", new { area = "Catalogo" },
                        new { @class = "btn btn-sm btn-default" })
                </div>
            </div>
        </div>

        <div class="col-md-12 m-t-20 p-internos-0 m-b-5">
            <div class="col-md-6 bold">
                @Html.DropDownListFor(m => m.TamanoPagina, Listas.ObtenerListaCantidadPagina())
                @General.TamanoPagina
            </div>
            <div class="col-md-6 text-right">
                <label class="label label-success">
                    @General.Encontrados: @Model.TotalEncontrados
                </label>
            </div>
        </div>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="tblBusqueda">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Estado.Nombre)</th>
                            <th>@Html.DisplayNameFor(m => m.Estado.Abreviatura)</th>
                            <th class="text-center">@General.Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var estado in Model.Estados)
                        {
                            <tr>
                                <td>@estado.Nombre</td>
                                <td>@estado.Abreviatura</td>
                                <td class="text-center">
                                    <a class="btn btn-success btn-circle" data-toggle="action-menu" href="javascript: void(0);" title="Acciones">
                                        <i class="fa fa-bars"></i>
                                    </a>
                                    <div class="action-menu" style="display: none;">
                                        <ul>
                                            <li>
                                                @Html.ActionLinkCifrado(General.Modificar, "Guardar", "Estado", "Catalogo",
                                                            "btn btn-warning btn-circle", "fa fa-pencil",
                                                            new Dictionary<string, int> { { "idEstado", estado.IDEstado } })
                                            </li>
                                            <li>
                                                @Html.ActionLinkCifrado(General.Eliminar, "Eliminar", "Estado", "Catalogo",
                                                            "btn btn-danger btn-circle eliminar", "fa fa-times",
                                                            new Dictionary<string, int> { { "idEstado", estado.IDEstado } })
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div>
                @Html.Partial("Controls/_Paginacion", Model)
            </div>
        </div>
    </div>
    <div class="modal fade" id="mdlConfirmar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h3 class="modal-title">
                        <label>@General.Cuidado</label>
                    </h3>
                </div>
                <div class="modal-body text-center">
                    <label id="lblModal"></label>
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" tabindex="2">@General.Cancelar</button>
                    <button id="btnConfirmar" class="btn btn-primary">@General.Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}

@section FooterScripts
{
    <script type="text/javascript" src="/Content/js/jquery.tablesorter.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var enlaceEnEspera;
            var confirmado = false;

            $("#tblBusqueda").tablesorter();

            $(".eliminar").click(function (e) {
                if (!confirmado) {
                    enlaceEnEspera = this;
                    e.preventDefault();
                    $("#lblModal").html('@string.Format(Resources.General.PreguntaEliminar, General.Estado)');
                    $("#mdlConfirmar").modal("show");
                }
            });

            $("#btnConfirmar").click(function (e) {
                e.preventDefault();
                confirmado = true;
                enlaceEnEspera.click();
            });

        });
    </script>
}