@using Datos.Recursos
@using Datos.Repositorios.Configuracion
@model Datos.Usuario

@{
    ViewBag.Title = General.CrearUsuario;
}

<div class="tarjeta bg-f bx-s">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-4 text-right">
                    <label for="IDRol">Rol</label>
                </div>
                <div class="col-md-4">
                    @Html.DropDownListFor(m => m.IDRol, RolRepositorio.Buscar(), new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(m => m.IDRol, null, new { @class = "label label-warning" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 text-right">
                    <label for="NombreUsuario">Usuario</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(m => m.NombreUsuario, null, new { @class = "label label-warning" })
                </div>
            </div>
            @if (Model == null)
            {
                <div class="form-group">
                    <div class="col-md-4 text-right">
                        <label for="Contrasena">Contraseña</label>
                    </div>
                    <div class="col-md-4">
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.Contrasena, null, new { @class = "label label-warning" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 text-right">
                        <label for="RepetirContrasena">Repetir Contraseña</label>
                    </div>
                    <div class="col-md-4">
                        @Html.PasswordFor(m => m.RepetirContrasena, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.RepetirContrasena, null, new { @class = "label label-warning" })
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-4 col-md-offset-4">
                    <div class="pull-right">
                        @Html.ActionLink(General.Regresar, "Index", "Empleado",
                            new { area = "Catalogo" }, new { @class = "btn btn-default" })
                        <input type="submit" value="@Resources.General.Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>