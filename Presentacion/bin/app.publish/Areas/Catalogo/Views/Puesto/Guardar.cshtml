@using Datos.Recursos
@model Datos.Puesto

@{
    ViewBag.Title = General.GuardarPuesto;
}

<div class="ibox bx-s">
    <div class="ibox-content p-l-20 p-r-10 bg-f">
        <div class="row center-xs">
            <div class="form-horizontal col-xs-12">
                @using (Html.BeginForm())
            {

                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            @Html.LabelFor(m => m.Nombre)
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control input-sm", @maxlength = 200 })
                            @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "label label-warning" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            <label for="Descripcion">Descripción</label>
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control input-sm", @maxlength = 200 })
                            @Html.ValidationMessageFor(m => m.Descripcion, null, new { @class = "label label-warning" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-2">
                            <div class="pull-right">
                                @Html.ActionLink(General.Regresar, "Index", "Puesto",
                            new { area = "Catalogo" }, new { @class = "btn btn-default" })
                                <input type="submit" value="@General.Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
