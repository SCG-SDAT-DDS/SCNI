@using System.Globalization
@using Datos.Repositorios.Configuracion
@using Presentacion.Helpers
@model Datos.DTO.Infraestructura.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = Resources.General.BuscarUsuario;
}

@using (Html.BeginForm())
{
    <div class="ibox bx-s">
        <div class="ibox-content p-l-20 p-r-10 bg-f">
            <div class="row">
                <div class="col-xs-12">

                    @{ Html.EnableClientValidation(false); }
                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3">
                                <label for="Usuario_NombreUsuario">Usuario</label>
                            </div>
                            <div class="col-md-9 ">
                                @Html.TextBoxFor(m => m.Usuario.NombreUsuario, new { @class = "form-control input-sm", @onkeypress = "return soloLetras(event)" })
                                @Html.ValidationMessageFor(m => m.Usuario.NombreUsuario, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Usuario.Habilitado)
                            </div>
                            <div class="col-md-9 ">
                                <div class="checkbox checkbox-success">
                                    @Html.CheckBoxFor(m => m.Usuario.Habilitado)
                                    @Html.LabelFor(m => m.Usuario.Habilitado)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="divBusquedaAvanzada" class="col-md-12 no-padding">
                        <div class="col-md-6 form-horizontal">
                            <div class="form-group">
                                <div class="col-md-3">
                                    @Html.LabelFor(m => m.Usuario.Rol)
                                </div>
                                <div class="col-md-9 ">
                                    @Html.DropDownListFor(m => m.Usuario.Rol.IDRol, RolRepositorio.Buscar(), new { @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(m => m.Usuario.IDRol, null, new { @class = "label label-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="col-md-6 col-md-offset-6">
                            <div class="pull-right">
                                <input type="submit" class="btn btn-primary btn-sm" value="@Resources.General.Buscar" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 m-t-20 p-internos-0 m-b-5">
                    <div class="col-xs-6 bold">
                        @Html.DropDownListFor(m => m.TamanoPagina, Sistema.Listas.ObtenerListaCantidadPagina())
                        @Resources.General.TamanoPagina
                    </div>
                    <div class="col-xs-6 text-right">
                        <label class="label label-success">
                            @Resources.General.Encontrados: @Model.TotalEncontrados
                        </label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="tblBusqueda">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>@Html.DisplayNameFor(m => m.Usuario.Email)</th>
                                    <th>@Resources.General.TipoUsuario</th>
                                    <th class="text-center">@Resources.General.Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var usuario in Model.Usuarios)
                                    {
                                        <tr>
                                            <td>@usuario.NombreUsuario</td>
                                            <td>@usuario.Email</td>
                                            <td>
                                                @(usuario.Empleado != null
                                      ? Html.Raw(Resources.General.Empleado)
                                      : Html.Raw(Resources.General.Otro))
                                            </td>
                                            <td class="text-center">
                                                @if (usuario.Habilitado)
                                                {
                                                    @Html.ActionLink(Resources.General.Detalles, "detalles", "#", "btn btn-info btn-circle", "fa fa-search")

                                                    @Html.ActionLinkCifrado(Resources.General.Deshabilitar, "Deshabilitar", "Usuario", "Catalogo",
                                        "btn btn-danger btn-circle deshabilitar", "fa fa-times",
                                        new Dictionary<string, int> { { "idUsuario", usuario.IDUsuario } })
                                                }
                                                else
                                                {
                                                    @Html.ActionLinkCifrado(Resources.General.Habilitar, "Habilitar", "Usuario", "Catalogo",
                                        "btn btn-primary btn-circle habilitar", "fa fa-check",
                                        new Dictionary<string, int> { { "idUsuario", usuario.IDUsuario } })
                                                }
                                                @Html.HiddenCifrado("idUsuario", usuario.IDUsuario.ToString(CultureInfo.InvariantCulture))
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div>
                        @Html.Partial("Controls/_Paginacion", Model)
                    </div>
                </div>
                @Html.Partial("Controls/_ModalHabilitar")
                @Html.Partial("Usuario/_DetallesUsuario")
            </div>
        </div>
    </div>
                        }
@section FooterScripts
{
    <script type="text/javascript" src="~/scripts/plugins/iCheck/icheck.min.js"></script>
    <script type="text/javascript" src="~/scripts/libs/jquery.tablesorter.js"></script>
    <script type="text/javascript">
                    $(function () {
                        $("#tblBusqueda").tablesorter();
                        habilitar.Iniciar('@Resources.General.Usuario');

                        $(".detalles").click(function (e) {
                            e.preventDefault();
                            var id = $(this).parent().find("input[type=hidden]").val();
                            detallesUsuario.Buscar(id);
                        });
                    });

    </script>
}
