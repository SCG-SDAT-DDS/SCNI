@using Datos.Recursos
@using Presentacion.Helpers
@using Sistema
@model Datos.DTO.Infraestructura.ViewModels.TituloViewModel

@{
    ViewBag.Title = General.BuscarTitulo;
}

@using (Html.BeginForm())
{
    <div class="ibox bx-s">
        <div class="ibox-content p-l-20 p-r-10 bg-f">
            <div class="row">
                <div class="col-xs-12">
                    @{ Html.EnableClientValidation(false); }

                    <div class="col-md-6 form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3 col-xs-3">
                                <label for="Titulo_Abreviacion">Abreviación</label>
                            </div>
                            <div class="col-md-9 col-xs-9">
                                @Html.TextBoxFor(m => m.Titulo.Abreviacion, new { @class = "form-control input-sm m-t-0", @onkeypress = "return abreviacion(event)", @maxlength = 30 })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-sm btn-primary" value="@Resources.General.Buscar" />
                        @Html.ActionLink(General.Nuevo, "Guardar", new { area = "Catalogo" },
                    new { @class = "btn btn-sm btn-default" })
                    </div>

                </div>
                <div class="col-md-12 form-horizontal">
                    <div class="col-md-6 p-lateral-0">
                        <div class="col-md-3 col-md-offset-3">
                            <div class="checkbox checkbox-success">
                                @Html.CheckBoxFor(m => m.Titulo.Habilitado)
                                @Html.LabelFor(m => m.Titulo.Habilitado)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 m-t-20 p-internos-0 m-b-5">
                    <div class="col-xs-6 bold">
                        @Html.DropDownListFor(m => m.TamanoPagina, Listas.ObtenerListaCantidadPagina())
                        @General.TamanoPagina
                    </div>
                    <div class="col-xs-6 text-right">
                        <label class="label label-success">
                            @General.Encontrados: @Model.TotalEncontrados
                        </label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="tblBusqueda">
                            <thead>
                                <tr>
                                    <th>Abreviación</th>
                                    <th class="text-center">@General.Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var titulo in Model.Titulos)
                                {
                                    <tr>
                                        <td>@titulo.Abreviacion</td>
                                        <td class="text-center">

                                            @if (titulo.Habilitado)
                                            {

                                                @Html.ActionLinkCifrado(General.Modificar, "Guardar", "Titulo", "Catalogo",
                                        "btn btn-warning btn-circle", "fa fa-pencil",
                                        new Dictionary<string, int> { { "idTitulo", titulo.IDTitulo } })

                                                @Html.ActionLinkCifrado(General.Deshabilitar, "Deshabilitar", "Titulo", "Catalogo",
                                        "btn btn-danger btn-circle deshabilitar", "fa fa-times",
                                        new Dictionary<string, int> { { "idTitulo", titulo.IDTitulo } })
                                            }
                                            else
                                            {
                                                @Html.ActionLinkCifrado(General.Habilitar, "Habilitar", "Titulo", "Catalogo",
                                        "btn btn-primary btn-circle habilitar", "fa fa-check",
                                        new Dictionary<string, int> { { "idTitulo", titulo.IDTitulo } })
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div>
                        @Html.Partial("_Paginacion", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_ModalHabilitar");
                        }

@section FooterScripts
{
    <script type="text/javascript" src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.tablesorter.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblBusqueda").tablesorter();

            habilitar.Iniciar('@General.Titulo');
        });
    </script>
}