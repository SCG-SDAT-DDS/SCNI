@using Datos.Recursos
@model Datos.Plantilla

@{
    ViewBag.Title = General.GuardarPlantilla;
}

<div class="ibox bx-s">
    <div class="ibox-content p-l-20 p-r-10 bg-f">
        <div class="row center-xs">
            <div class="form-horizontal col-xs-12">
                @using (Html.BeginForm("Guardar", "Plantilla", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            @Html.LabelFor(m => m.Descripcion)
                        </div>
                        <div class="col-sm-4">
                            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control input-sm", @maxlength = 400 })
                            @Html.ValidationMessageFor(m => m.Descripcion, null, new { @class = "label label-warning" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            <label for="Plantilla">Plantilla</label>
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBox("archivo", "", new {type = "file", @class = "form-control input-sm"})
                            @Html.ValidationMessage("Plantilla", null, new {@class = "label label-warning"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 end-sm start-xs">
                            @Html.LabelFor(m => m.Actual)
                        </div>
                        <div class="col-sm-1 text-left">
                            @Html.CheckBoxFor(m => m.Actual)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-2">
                            <div class="pull-right">
                                @Html.ActionLink(General.Regresar, "Index", "Plantilla",
                            new { area = "Catalogo" }, new { @class = "btn btn-default" })
                                <input type="submit" value="@General.Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    }
            </div>
        </div>
    </div>
</div>
